---
interface Props {
  appShortName: string;
  pageTitle: string;
  themeColor: string;
}

const { appShortName, pageTitle, themeColor } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, viewport-fit=cover"
    />
    <title>{pageTitle}</title>
    <meta name="theme-color" content={themeColor} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content={appShortName} />
    <link rel="manifest" href="manifest.json" />
    <link rel="apple-touch-icon" href="icon-192.png" />
    <link rel="icon" href="favicon.ico" sizes="any" />
    <link rel="icon" href="favicon-32.png" type="image/png" sizes="32x32" />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@300;400;500;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
    <script
      is:inline
      data-goatcounter="https://magfields.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"
    ></script>
  </body>
</html>
